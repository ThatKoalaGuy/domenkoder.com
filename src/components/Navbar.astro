<nav
	id="navbar"
	class="bg-zinc-800 text-green-400 px-6 py-4 shadow-md fixed w-full top-0 z-50 transition-transform duration-300"
>
	<div class="max-w-7xl mx-auto flex justify-between items-center">
		<div class="text-2xl font-bold">
			<a href="/" class="hover:text-white transition">Domen Koder</a>
		</div>

		<!-- Desktop links -->
		<div class="hidden md:flex space-x-6">
			<a href="/blog" class="hover:text-white transition">Blog</a>
			<a href="/portfolio" class="hover:text-white transition">Portfolio</a>
			<a href="/skills" class="hover:text-white transition">Skills</a>
			<a href="/about" class="hover:text-white transition">About me</a>
		</div>

		<!-- Mobile menu button -->
		<button
			id="menuButton"
			aria-label="menu"
			class="md:hidden focus:outline-none"
		>
			<svg
				id="menuIcon"
				class="w-6 h-6"
				fill="none"
				stroke="currentColor"
				viewBox="0 0 24 24"
			>
				<path
					stroke-linecap="round"
					stroke-linejoin="round"
					stroke-width="2"
					d="M4 6h16M4 12h16M4 18h16"></path>
			</svg>
		</button>
	</div>

	<!-- Mobile dropdown -->
	<div
		id="mobileMenu"
		class="md:hidden absolute top-full right-0 w-48 bg-zinc-900 text-green-400 rounded-md shadow-lg transform transition-all duration-300 origin-top-right opacity-0 scale-95 translate-x-4 pointer-events-none"
	>
		<div class="flex flex-col items-end px-4 py-4 space-y-2 text-right">
			<a href="/blog" class="hover:text-white transition">Blog</a>
			<a href="/portfolio" class="hover:text-white transition">Portfolio</a>
			<a href="/skills" class="hover:text-white transition">Skills</a>
			<a href="/about" class="hover:text-white transition">About me</a>
		</div>
	</div>
</nav>

<script>
	// Mobile menu toggle
	const menuButton = document.getElementById('menuButton');
	const mobileMenu = document.getElementById('mobileMenu');
	const menuIcon = document.getElementById('menuIcon');
	let menuOpen = false;

	if (menuButton && mobileMenu && menuIcon) {
		menuButton.addEventListener('click', () => {
			menuOpen = !menuOpen;
			if (menuOpen) {
				mobileMenu.classList.remove(
					'opacity-0',
					'scale-95',
					'translate-x-4',
					'pointer-events-none'
				);
				mobileMenu.classList.add('opacity-100', 'scale-100', 'translate-x-0');
				menuIcon.innerHTML =
					'<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>';
			} else {
				mobileMenu.classList.remove(
					'opacity-100',
					'scale-100',
					'translate-x-0'
				);
				mobileMenu.classList.add(
					'opacity-0',
					'scale-95',
					'translate-x-4',
					'pointer-events-none'
				);
				menuIcon.innerHTML =
					'<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>';
			}
		});

		// Hide on scroll
		let lastScrollY = 0;
		const navbar = document.getElementById('navbar');

		if (navbar) {
			window.addEventListener('scroll', () => {
				const currentScrollY = window.scrollY;
				if (currentScrollY > lastScrollY && currentScrollY > 50) {
					navbar.classList.add('-translate-y-full');
					navbar.classList.remove('translate-y-0');
				} else {
					navbar.classList.remove('-translate-y-full');
					navbar.classList.add('translate-y-0');
				}
				lastScrollY = currentScrollY;
			});
		}
	}
</script>

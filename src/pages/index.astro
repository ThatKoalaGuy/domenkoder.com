---
import Layout from '../layouts/layout.astro';

const title = 'Domen Koder | Software Dev';
const description =
	'Domen Koder is a software engineering student with a passion for web development and Linux. Explore projects and connect online.';
const canonical = 'https://domenkoder.com/';
---

<Layout {title} {description} {canonical}>
	<main class="flex justify-center items-center min-h-[calc(87vh-5rem)] p-4">
		<div>
			<h1 class="text-5xl sm:text-9xl">Hi, I'm Domen.</h1>
			<h2 class="text-2xl sm:text-5xl">
				A high-school junior studying software engineering.
			</h2>
		</div>
	</main>
</Layout>

---
import Layout from '../layouts/layout.astro';

const title = 'Domen Koder | Software Dev';
const description =
	'Domen Koder is a software engineering student with a passion for web development and Linux. Explore projects and connect online.';
const canonical = 'https://domenkoder.com/portfolio';
---

<Layout {title} {description} {canonical}>
	<main
		class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 p-6 max-w-450 mx-auto"
	>
		<a
			target="_blank"
			href="https://github.com/ThatKoalaGuy/personal-website"
			class="block bg-zinc-700 rounded-lg overflow-hidden shadow-lg hover:scale-105 transition-transform duration-300"
		>
			<div class="aspect-[4/3]">
				<img
					src="/projects/personal-website.png"
					alt="Personal website project"
					class="object-cover w-full h-full"
				/>
			</div>
			<div class="p-4 text-green-400 font-semibold text-lg">
				Personal portfolio website - you are visiting it right now!
				<br />
				<br />
				<br />
				Tech stack: Astro + TailwindCSS
			</div>
		</a>

		<a
			target="_blank"
			href="https://github.com/ThatKoalaGuy/ToDoCLI"
			class="block bg-zinc-700 rounded-lg overflow-hidden shadow-lg hover:scale-105 transition-transform duration-300"
		>
			<div class="aspect-[4/3]">
				<img
					src="/projects/todocli.png"
					alt="ToDoCLI project"
					class="object-cover w-full h-full"
				/>
			</div>
			<div class="p-4 text-green-400 font-semibold text-lg">
				ToDoCLI - a simple CLI todo app.
				<br />
				<br />
				<br />
				Tech stack: C
			</div>
		</a>

		<a
			target="_blank"
			href="https://github.com/ThatKoalaGuy/Calculator"
			class="block bg-zinc-700 rounded-lg overflow-hidden shadow-lg hover:scale-105 transition-transform duration-300"
		>
			<div class="aspect-[4/3]">
				<img
					src="/projects/calculator.png"
					alt="Calculator project"
					class="object-cover w-full h-full"
				/>
			</div>
			<div class="p-4 text-green-400 font-semibold text-lg">
				Calculator - a calculator made for practicing web development skills.
				<br />
				<br />
				Tech stack: HTML, CSS, JS
			</div>
		</a>

		<a
			target="_blank"
			href="https://github.com/ThatKoalaGuy/RockPaperScissors"
			class="block bg-zinc-700 rounded-lg overflow-hidden shadow-lg hover:scale-105 transition-transform duration-300"
		>
			<div class="aspect-[4/3]">
				<img
					src="/projects/rps.png"
					alt="Rock Paper Scissors project"
					class="object-cover w-full h-full"
				/>
			</div>
			<div class="p-4 text-green-400 font-semibold text-lg">
				RockPaperScissors - a game made for learning web development.
				<br />
				<br />
				Tech stack: HTML, CSS, JS
			</div>
		</a>
	</main>
</Layout>

---
import Layout from '../layouts/layout.astro';

const title = 'Page Not Found | Domen Koder';
const description = "Oops! The page you're looking for doesn't exist.";
const canonical = 'https://domenkoder.com/404';
---

<Layout {title} {description} {canonical}>
	<main>
		<div
			class="flex flex-col justify-center items-center text-center h-full w-full px-4"
			style="min-height: calc(100vh - 13rem);"
		>
			<h1 class="text-9xl font-bold mb-4">404</h1>
			<p class="text-4xl sm:text-5xl mb-4">Page not found</p>
			<p class="text-2xl sm:text-3xl mb-6">
				The page ran away. Probably scared of your code ;)
			</p>
			<a href="/" class="text-blue-500 hover:underline text-xl sm:text-2xl">
				Go back home
			</a>
		</div>
	</main>
</Layout>
